---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import navData from "../data/navData";
---

<nav
    class="sticky top-0 w-full py-2 2xl:px-96 lg:px-36 px-6 shadow-md flex justify-between gap-6 bg-slate-50 z-50"
>
    <div class="flex gap-2">
        <div class="flex items-center gap-1">
            <Image src="/images/icon3.png" alt="icono" width="50" height="50" />
            <ul class="flex flex-row gap-1 text-xl font-semibold">
                {
                    navData.map((item) => (
                        <li class="py-2">
                            <a
                                class="hover:bg-slate-200 rounded-lg cursor-pointer transition-colors p-2"
                                href={item.path}
                            >
                                {item.name}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
    <div class="md:flex items-center hidden">
        <ul class="flex flex-row gap-3">
            <li>
                <a href="mailto:jcsdlg49@gmail.com" aria-label="Email">
                    <Icon
                        class="text-slate-700 hover:text-c3 transition-colors"
                        name="mdi:email"
                        size={35}
                    />
                </a>
            </li>
            <li>
                <a
                    href="https://github.com/Clarozzz"
                    aria-label="GitHub"
                    target="_blank"
                >
                    <Icon
                        class="text-slate-700 hover:text-c3 transition-colors"
                        name="mdi:github"
                        size={35}
                    />
                </a>
            </li>
            <li>
                <a
                    href="https://www.linkedin.com/in/cesar-claros-622236312/"
                    aria-label="LinkedIn"
                    target="_blank"
                >
                    <Icon
                        class="text-slate-700 hover:text-c3 transition-colors"
                        name="mdi:linkedin"
                        size={35}
                    />
                </a>
            </li>
        </ul>
    </div>
</nav>
